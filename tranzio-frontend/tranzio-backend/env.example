# Database (PostgreSQL for production, SQLite for development)
# Add connection pooling parameters for better performance
DATABASE_URL="postgresql://username:password@host:port/database?connection_limit=20&pool_timeout=20&connect_timeout=10"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"

# Server
PORT=4000
NODE_ENV="production"

# CORS (comma-separated list of allowed origins)
CORS_ORIGIN="https://tranzzio.netlify.app,https://your-custom-domain.com"

# Bcrypt
BCRYPT_ROUNDS=12

# Frontend URL (for redirects and email links)
FRONTEND_URL="https://tranzzio.netlify.app"

# WebSocket URL (for real-time features)
WS_URL="https://tranzio-backend.onrender.com"

# Platform Configuration
DEFAULT_CURRENCY="NGN" # Nigerian Naira (primary currency)
SUPPORTED_CURRENCIES="NGN,GHS,KES,ZAR,USD,EUR" # Supported currencies

# Render specific
RENDER=true
